{
    "name": "api-development",
    "version": "0.0.1",
    "description": "Standard base Docker development settings",
    "author": "Allan Nubling <nubling@gmail.com>",
    "license": "MIT",
    "repository": "https://github.com/allan-nubling/api-development",
    "main": "src/app.ts",
    "scripts": {
        "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
        "test-verbose": "jest --passWithNoTests --runInBand",
        "test:unit": "npm test -- -c jest-unit-config.ts",
        "test:integration": "npm test -- -c jest-integration-config.ts",
        "lint": "eslint --fix ./src/*",
        "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/server.ts",
        "dev:docker": "ts-node-dev --inspect=0.0.0.0:7001 --poll -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/server.ts",
        "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
        "start": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored && node ./build/main/server.js"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/node": "^7.14.9",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jest": "^27.0.1",
        "@types/node": "^14.14.33",
        "@types/passport": "^1.0.6",
        "@types/passport-jwt": "^3.0.5",
        "@types/supertest": "^2.0.10",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/yup": "^0.29.13",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.2",
        "dotenv": "^8.2.0",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-import-helpers": "^1.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.3",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "@azure/identity": "^1.5.1",
        "@azure/keyvault-secrets": "^4.3.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "mssql": "^7.2.0",
        "mysql2": "^2.3.0",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.31",
        "yup": "^0.32.9"
    }
}
